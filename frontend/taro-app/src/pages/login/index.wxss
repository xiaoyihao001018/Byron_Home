.login-container {
  height: 100vh;
  padding: 32rpx;
  background-color: #f3f4f6;
}

.login-card {
  margin-top: 40vh;
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 48rpx;
}

.login-title {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #111827;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-top: 16rpx;
}

.login-button {
  margin-top: 48rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #22c55e;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
  text-align: center;
} 